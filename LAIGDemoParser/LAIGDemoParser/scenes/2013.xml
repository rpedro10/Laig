        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

   
  
</MATERIALS>


<LEAVES>
<!-- ... -->
</LEAVES>

<NODES>


<ROOT id="root" /> 

<NODE id="root">   

<MATERIAL id="defaultMaterial" />         
<TEXTURE id="null" />  

	<DESCENDANTS>
		<NODEREF id="floor" />    
		<NODEREF id="mesa" /> 
		<NODEREF id="wall1" />
		<NODEREF id="wall2" />



</DESCENDANTS>

</NODE>

<NODE id="floor">
        <MATERIAL id= "null" />
        <TEXTURE id= "null" />

        <SCALE sx="1" sy="1" sz="1" />
        <TRANSLATION x="0" y="0" z="10" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 10 15 0" />
				</DESCENDANTS>
    </NODE>
	
	<NODE id="wall1">
          <MATERIAL id="defaultMaterial"/>
          <TEXTURE id="null"/>
          <TRANSLATION x="0" y="0" z="0"/>
